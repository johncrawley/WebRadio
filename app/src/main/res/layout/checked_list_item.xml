<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkedTextViewLayout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/station_library_list_item_padding_horizontal"
    android:paddingVertical="@dimen/station_library_list_item_padding_vertical"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/unselected_status_icon"
        android:layout_gravity="center"
        android:visibility="visible"
        android:padding="@dimen/list_status_icon_padding"
        android:contentDescription="@string/unselected_station_list_item_content_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/station_list_item_unselected_icon"/>

    <ImageView
        android:id="@+id/selected_status_icon"
        android:visibility="gone"
        android:layout_gravity="center"
        android:padding="@dimen/list_status_icon_padding"
        android:contentDescription="@string/unselected_station_list_item_content_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/station_list_item_selected_icon"/>

    <TextView
        android:id="@+id/stationNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:layout_gravity="center"
        android:paddingStart="@dimen/station_list_item_text_padding_start"
        android:paddingEnd="@dimen/station_list_item_text_padding_end"
        android:textSize="@dimen/station_list_item_text_size"/>

</LinearLayout>